{% extends "BSTchatBundle::layout.html.twig" %}

{% block title %} {{ parent() }} {% endblock %}

{% block stylesheets %} {{ parent() }} {% endblock %}

{% block body %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-12" id="main-nav">
                <div id="nav-items" class="text-right">
                    <span id="counter">5</span><a href="{{ path('fos_user_security_logout') }}" class="nav-button text-center">DÃ©connexion</a>
                </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-sm-3" id="login-area">

            </div>
            <div id="tchat-area" class="col-sm-offset-3 col-sm-9">
                <form class="col-sm-12" id="tchat-form">
                    <p>
                        <input type="text" name="message" class="col-sm-10" id="message" />
                        <input type="submit" value="Send" class="col-sm-2" id="submit" />
