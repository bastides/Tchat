                </form>
            </div>
        </div>
    </div>
    {% else %}
        <div class="container-fluid">
            <div id="home-register">
                <div id="login-or-register-area" class="col-sm-offset-4 col-sm-4">
                    <div class="row" id="registration-button">
                        <a href="{{ path('fos_user_registration_register') }}" class="login-button col-sm-offset-3 col-sm-6 text-center">Inscription</a>
                    </div>
                    <div class="row" id="connexion-button">
                        <a href="{{ path('fos_user_security_login') }}" class="login-button col-sm-offset-3 col-sm-6 text-center">Connexion</a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

